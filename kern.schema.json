{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "mcp": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "port": {
          "type": "number"
        }
      },
      "required": [
        "enabled"
      ],
      "additionalProperties": false
    },
    "parent": {
      "type": "string"
    },
    "processes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "command": {
            "type": "string",
            "minLength": 1
          },
          "cwd": {
            "type": "string"
          },
          "env": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "noParent": {
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "command"
        ],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": [
    "processes"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
